<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/bg">

    <LinearLayout
        android:layout_width="425dp"
        android:gravity="center"
        android:layout_height="60dp"
        android:background="@color/menu">

        <Space
            android:layout_width="8dp"
            android:layout_height="0dp"
            android:layout_weight=".5" />

        <TextView
            android:id="@+id/usehint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hint*"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:visibility="invisible"/>

        <Space
            android:layout_width="8dp"
            android:layout_height="0dp"
            android:layout_weight=".6" />

        <TextView
            android:id="@+id/current_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="0"
            android:textSize="35sp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/total_questions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/10"
            android:textSize="35sp"
            android:textColor="@color/white"/>

        <Space
            android:layout_width="8dp"
            android:layout_height="0dp"
            android:layout_weight=".5" />

        <TextView
            android:id="@+id/score"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:textColor="@color/white"
            android:textAlignment="viewEnd"
            tools:text="1200"/>

        <Space
            android:layout_width="8dp"
            android:layout_height="0dp"
            android:layout_weight=".5" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="210dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/white">
        <Space
            android:layout_width="8dp"
            android:layout_height="0dp"
            android:layout_weight=".5" />

        <ImageView
            android:id="@+id/img_topic"
            android:layout_width="60dp"
            android:layout_height="0dp"
            android:src="@drawable/history"
            android:layout_weight="2.5"/>

        <TextView
            android:id="@+id/question_box"
            android:layout_width="400dp"
            android:layout_height="60dp"
            tools:text="Aqui va la pregunta"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_weight="3"/>
    </LinearLayout>

    <Space
        android:layout_width="8dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/answer_one"
        android:layout_width="370dp"
        android:layout_height="60dp"
        tools:text="Cuatrimoto"
        android:backgroundTint="@color/white"
        android:textColor="@color/gray"
        android:textSize="20sp"
        android:layout_weight="1"/>

    <Space
        android:layout_width="8dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/answer_two"
        android:layout_width="370dp"
        android:layout_height="60dp"
        tools:text="Carro"
        android:backgroundTint="@color/white"
        android:textColor="@color/gray"
        android:textSize="20sp"
        android:layout_weight="1"/>

    <Space
        android:layout_width="8dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/answer_three"
        android:layout_width="370dp"
        android:layout_height="60dp"
        tools:text="Moto"
        android:backgroundTint="@color/white"
        android:textColor="@color/gray"
        android:textSize="20sp"
        android:layout_weight="1"/>
    <Space
        android:layout_width="8dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/answer_four"
        android:layout_width="370dp"
        android:layout_height="60dp"
        tools:text="Caballo"
        android:backgroundTint="@color/white"
        android:textColor="@color/gray"
        android:textSize="20sp"
        android:layout_weight="1"/>
    <Space
        android:layout_width="8dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/hints"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Hints: 5"
        android:textColor="@color/white"
        android:backgroundTint="@color/gray"
        android:textSize="20sp"
        android:layout_weight=".5"/>

    <Space
        android:layout_width="8dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="420dp"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/menu">

        <Space
            android:layout_width="8dp"
            android:layout_height="0dp"
            android:layout_weight=".5" />

        <Button
            android:id="@+id/prev"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:text="@string/prev"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:layout_weight="1"/>

        <Space
            android:layout_width="8dp"
            android:layout_height="0dp"
            android:layout_weight="8" />

        <Button
            android:id="@+id/next"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:text="@string/next"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:layout_weight="1"/>

        <Space
            android:layout_width="8dp"
            android:layout_height="0dp"
            android:layout_weight=".5" />

    </LinearLayout>
</LinearLayout>